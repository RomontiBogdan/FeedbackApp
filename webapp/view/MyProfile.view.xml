<mvc:View
	controllerName="sap.ui.demo.walkthrough.controller.MyProfile"
	xmlns:core="sap.ui.core"
	xmlns:mvc="sap.ui.core.mvc"
	xmlns:f="sap.ui.layout.form"
	xmlns="sap.m"
>
	<Page class="backgroundGradient">
		<customHeader>
           <Bar>
				<contentLeft>
					<Button
						icon="sap-icon://nav-back"
						press=".navBack"
						class="sapUiSmallMarginEnd"/>
					<Image src="../resources/MHP_Logo_RGB.svg" height="75%" press=".toMain"/>
				</contentLeft>
           </Bar>
      	</customHeader>
		  
		<VBox
			height="800px"
			width="1200px"
			alignItems="Center">
		
		<Image src="../resources/MHP_Excellence.svg" height="40px" width="700px" />

		<FlexBox
				height="650px"
				width="450px"
				alignItems="Center"
				justifyContent="Center"
				>

			<VBox fitContainer="true"
					width="800px"
					height = "550px"
					class="shadow boxBackground roundedBorders">
			<layoutData>
				<FlexItemData growFactor="7" />
			</layoutData>
					<Label
						text="{i18n>nameText}"
						labelFor="inputName"
						class="sapUiMediumMarginBeginEnd sapUiMediumMarginTop textGray"
					/>
					<Input
						value="{FullName}"
						id="inputName"
						editable="false"
						placeholder="{i18n>newName}"
						class="sapUiMediumMarginBeginEnd"
						width="450px"
					/>
					<Label
						text="{i18n>Username}"
						labelFor="inputUser"
						class="sapUiMediumMarginBeginEnd textGray"
					/>
					<Input
						value="{Username}"
						id="inputUser"
						editable="false"
						class="sapUiMediumMarginBeginEnd"
						width="450px"
					/>
					<Label
						text="{i18n>emailText}"
						labelFor="inputEmail"
						class="sapUiMediumMarginBeginEnd textGray"
					/>
					<Input
						value="{Email}"
						id="inputEmail"
						editable="false"
						placeholder="{i18n>newEmail}"
						class="sapUiMediumMarginBeginEnd"
						width="450px"
					/>
					<Label
						text="{i18n>telephone}"
						labelFor="inputTel"
						class="sapUiMediumMarginBeginEnd textGray"
					/>
					<Input
						value="{PersonalNo}"
						id="inputTel"
						editable="false"
						placeholder="{i18n>newTelephone}"
						class="sapUiMediumMarginBeginEnd"
						width="450px"
					/>
					<Label
						text="{i18n>suText}"
						labelFor="inputSU"
						class="sapUiMediumMarginBeginEnd textGray"
					/>
					<Input
						value="{Su}"
						id="inputSU"
						editable="false"	
						placeholder="{i18n>newServiceUnit}"
						class="sapUiMediumMarginBeginEnd"
					    width="450px"
					/>
					<Label
						text="{i18n>careerLevel}"
						labelFor="inputLevel"
						class="sapUiMediumMarginBeginEnd textGray"
					/>
					<Select
						forceSelection="false"
						id="inputLevel"
						editable="false"
						selectedKey="{CareerLevel}"
						class="sapUiMediumMarginBeginEnd textGray"
					    width="450px"
						items="{
                            path: 'myProfileModel>/Levels',
                            sorter: { path: 'myProfileModel>Levels/Name' }
                        }"
					>
						<core:ListItem
							key="{myProfileModel>Id}"
							text="{myProfileModel>Name}"
						/>
					</Select>
					<Label
						text="{i18n>fiscalYear}"
						labelFor="inputFiscalYear"
						class="sapUiMediumMarginBeginEnd textGray"
					/>
					<Input
						value="{FiscalYear}"
						id="inputFiscalYear"
						editable="false"
						class="sapUiMediumMarginBeginEnd"
						width="450px"
					/>
			</VBox>
		</FlexBox>
		</VBox>
		<footer>
			<Toolbar>
				<ToolbarSpacer/>
				<Button
					type="Emphasized"
					text="{i18n>save}"
					press="onPressSave"
				/>
				<HBox>
					<Switch
						customTextOn="âœ“"
						customTextOff="{i18n>edit}"
						change="onEdit"
						width="90%"
					>
						<layoutData>
							<FlexItemData growFactor="1"/>
						</layoutData>
					</Switch>
				</HBox>
			</Toolbar>
		</footer>
	</Page>
</mvc:View>