<mvc:View
	controllerName="sap.ui.demo.walkthrough.controller.MyProfile"
	xmlns:core="sap.ui.core"
	xmlns:mvc="sap.ui.core.mvc"
	xmlns:f="sap.ui.layout.form"
	xmlns="sap.m"
>
	<Page
		title="{i18n>ViewProfilePageTitle}"
		showNavButton="true"
		navButtonPress=".onNavBack"
		class="sapUiContentPadding"
	>
	<headerContent>
		<Button 
		icon="https://image.flaticon.com/icons/png/512/197/197374.png"
		press=".setGermani18n"
		class="sapUiSmallMarginBeginEnd"/>
		<Button
		icon="https://image.flaticon.com/icons/png/512/197/197571.png"
		press=".setEnglishi18n"
		class="sapUiTinyMarginEnd"/>
	</headerContent>	
		<Panel>
			<f:SimpleForm
				id="form"
				editable="true"
				layout="ResponsiveGridLayout"
				labelSpanXL="3"
				labelSpanL="3"
				labelSpanM="3"
				adjustLabelSpan="false"
				emptySpanXL="3"
				emptySpanL="3"
				emptySpanM="3"
				columnsXL="1"
				columnsL="1"
				singleContainerFullSize="false"
			>
				<f:content>
					<Label
						text="{i18n>nameText}"
						labelFor="inputName"
					/>
					<Input
						value="{FullName}"
						id="inputName"
						editable="false"
						placeholder="{i18n>newName}"
						class="sapUiSmallMarginBottom"
					/>
					<Label
						text="{i18n>Username}"
						labelFor="inputUser"
					/>
					<Input
						value="{Username}"
						id="inputUser"
						editable="false"
						class="sapUiSmallMarginBottom"
					/>
					<Label
						text="{i18n>emailText}"
						labelFor="inputEmail"
					/>
					<Input
						value="{Email}"
						id="inputEmail"
						editable="false"
						placeholder="{i18n>newEmail}"
						class="sapUiSmallMarginBottom"
					/>
					<Label
						text="{i18n>telephone}"
						labelFor="inputTel"
					/>
					<Input
						value="{PersonalNo}"
						id="inputTel"
						editable="false"
						placeholder="{i18n>newTelephone}"
						class="sapUiSmallMarginBottom"
					/>
					<Label
						text="{i18n>suText}"
						labelFor="inputSU"
					/>
					<Input
						value="{Su}"
						id="inputSU"
						editable="false"
						placeholder="{i18n>newServiceUnit}"
						class="sapUiSmallMarginBottom"
					/>
					<Label
						text="{i18n>careerLevel}"
						labelFor="inputLevel"
					/>
					<Select
						forceSelection="false"
						id="inputLevel"
						editable="false"
						selectedKey="{CareerLevel}"
						items="{
                            path: 'myProfileModel>/Levels',
                            sorter: { path: 'myProfileModel>Levels/Name' }
                        }"
					>
						<core:ListItem
							key="{myProfileModel>Id}"
							text="{myProfileModel>Name}"
						/>
					</Select>
					<Label
						text="{i18n>fiscalYear}"
						labelFor="inputFiscalYear"
					/>
					<Input
						value="{FiscalYear}"
						id="inputFiscalYear"
						editable="false"
						class="sapUiSmallMarginBottom"
					/>
				</f:content>
			</f:SimpleForm>
		</Panel>
		<footer>
			<Toolbar>
				<ToolbarSpacer/>
				<Button
					type="Emphasized"
					text="{i18n>save}"
					press="onPressSave"
				/>
				<HBox>
					<Switch
						customTextOn="âœ“"
						customTextOff="{i18n>edit}"
						change="onEdit"
						width="90%"
					>
						<layoutData>
							<FlexItemData growFactor="1"/>
						</layoutData>
					</Switch>
				</HBox>
			</Toolbar>
		</footer>
	</Page>
</mvc:View>