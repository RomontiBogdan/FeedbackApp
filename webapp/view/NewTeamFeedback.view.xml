<mvc:View
	controllerName="sap.ui.demo.walkthrough.controller.NewTeamFeedback"
	xmlns:core="sap.ui.core"
	xmlns:mvc="sap.ui.core.mvc"
	xmlns:l="sap.ui.layout"
	xmlns:f="sap.ui.layout.form"
	xmlns="sap.m"
>
	<Page
		title="Request Team Feedback"
		showNavButton="true"
		navButtonPress=".onNavBack"
	>

    <l:VerticalLayout
			class="sapUiContentPadding"
			width="100%"
		>
			<f:SimpleForm
				id="form"
				editable="true"
				layout="ResponsiveGridLayout"
				labelSpanXL="3"
				labelSpanL="3"
				labelSpanM="3"
				adjustLabelSpan="false"
				emptySpanXL="3"
				emptySpanL="3"
				emptySpanM="3"
				columnsXL="1"
				columnsL="1"
				singleContainerFullSize="false"
			>
                <Label
					text="Select manager"
					labelFor="inputToManager"
				/>
				<Select
					forceSelection="false"
					id="inputToManager"
					items="{/TeamManagersSet}"
				>
					<core:ListItem
						key="{TeamManager}"
						text="{TeamManager}"
					/>
				</Select>
				<Label
					text="Select team member"
					labelFor="inputToMember"
				/>
				<Select
					forceSelection="false"
					id="inputToMember"
					items="{toMembers}"
					change="onUserChange"
				>
					<core:ListItem
						key="{Username}"
						text="{Username}"
					/>
				</Select>
				<Label
					text="Select project"
					labelFor="inputToProjects"
				/>
				<Select
					forceSelection="false"
					id="inputToProjects"
					items="{toProjects}"
				>
					<core:ListItem
						key="{ProjectId}"
						text="{ProjectName}"
					/>
				</Select>
			</f:SimpleForm>
		</l:VerticalLayout>
		<footer>
			<Bar>
				<contentRight>
					<Button
						text="Request Feedback"
						press=".onSend"
						class="myCustomButton"
						icon="sap-icon://paper-plane"
					/>
				</contentRight>
			</Bar>
		</footer>
		
	</Page>
</mvc:View>