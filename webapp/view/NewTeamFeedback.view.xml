<mvc:View
	controllerName="sap.ui.demo.walkthrough.controller.NewTeamFeedback"
	xmlns:core="sap.ui.core"
	xmlns:mvc="sap.ui.core.mvc"
	xmlns:l="sap.ui.layout"
	xmlns:f="sap.ui.layout.form"
	xmlns="sap.m"
>
	<Page>
		<customHeader>
           <Bar>
				<contentLeft>
					<Button
						icon="sap-icon://nav-back"
						press=".navBack"
						class="sapUiSmallMarginEnd"/>
					<Image src="../resources/MHP_Logo_RGB.svg" height="75%" press=".toMain"/>
				</contentLeft>
           </Bar>
      	</customHeader>	
		<l:VerticalLayout
			class="sapUiContentPadding"
			width="100%"
		>
			<f:SimpleForm
				id="form"
				editable="true"
				layout="ResponsiveGridLayout"
				labelSpanXL="3"
				labelSpanL="3"
				labelSpanM="3"
				adjustLabelSpan="false"
				emptySpanXL="3"
				emptySpanL="3"
				emptySpanM="3"
				columnsXL="1"
				columnsL="1"
				singleContainerFullSize="false"
			>
				<Label
					text="{i18n>selectEvaluator}"
					labelFor="evaluatorUserSelect"
				/>
				<Select
					forceSelection="false"
					id="evaluatorUserSelect"
					items="{/UsernamesSet}"
				>
					<core:ListItem
						key="{Username}"
						text="{Username}"
					/>
				</Select>
				<Label
					text="{i18n>selectTeamMember}"
					labelFor="teamMemberSelect"
				/>
				<Select
					forceSelection="false"
					id="teamMemberSelect"
					items="{toMembers}"
					change="onUserChange"
				>
					<core:ListItem
						key="{Username}"
						text="{Username}"
					/>
				</Select>
				<Label
					text="{i18n>selectProjectsInput}"
					labelFor="userProjectsSelect"
				/>
				<Select
					forceSelection="false"
					id="userProjectsSelect"
					items="{toProjects}"
				>
					<core:ListItem
						key="{ProjectId}"
						text="{ProjectName}"
					/>
				</Select>
				<Label
					text="{i18n>categoryFeedback}"
					labelFor="skillSelect"
				/>
				<Select
					forceSelection="false"
					id="skillSelect"
					items="{
                  path: 'newTeamFeedbackModel>/SkillCollection'
               }"
				>
					<core:ListItem
						key="{newTeamFeedbackModel>Id}"
						text="{newTeamFeedbackModel>Name}"
					/>
				</Select>
			</f:SimpleForm>
		</l:VerticalLayout>
		<footer>
			<Bar>
				<contentRight>
					<Button
						text="{i18n>requestFeedback}"
						press="onSendRequest"
						class="myCustomButton"
						icon="sap-icon://paper-plane"
					/>
				</contentRight>
			</Bar>
		</footer>
	</Page>
</mvc:View>