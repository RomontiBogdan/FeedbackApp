<mvc:View
	controllerName="sap.ui.demo.walkthrough.controller.NewTeamFeedback"
	xmlns:core="sap.ui.core"
	xmlns:mvc="sap.ui.core.mvc"
	xmlns:l="sap.ui.layout"
	xmlns:f="sap.ui.layout.form"
	xmlns="sap.m"
>
	<Page
		title="Request Team Feedback"
		showNavButton="true"
		navButtonPress=".onNavBack"
	>
		<l:VerticalLayout
			class="sapUiContentPadding"
			width="100%"
		>
			<f:SimpleForm
				id="form"
				editable="true"
				layout="ResponsiveGridLayout"
				labelSpanXL="3"
				labelSpanL="3"
				labelSpanM="3"
				adjustLabelSpan="false"
				emptySpanXL="3"
				emptySpanL="3"
				emptySpanM="3"
				columnsXL="1"
				columnsL="1"
				singleContainerFullSize="false"
			>
				<Label
					text="Select Evaluator User"
					labelFor="evaluatorUserSelect"
				/>
				<Select
					forceSelection="false"
					id="evaluatorUserSelect"
					items="{/UsernamesSet}"
				>
					<core:ListItem
						key="{Username}"
						text="{Username}"
					/>
				</Select>
				<Label
					text="Select Team Member"
					labelFor="teamMemberSelect"
				/>
				<Select
					forceSelection="false"
					id="teamMemberSelect"
					items="{toMembers}"
					change="onUserChange"
				>
					<core:ListItem
						key="{Username}"
						text="{Username}"
					/>
				</Select>
				<Label
					text="Select project"
					labelFor="userProjectsSelect"
				/>
				<Select
					forceSelection="false"
					id="userProjectsSelect"
					items="{toProjects}"
				>
					<core:ListItem
						key="{ProjectId}"
						text="{ProjectName}"
					/>
				</Select>
				<Label
					text="Offer feedback based on the following skill"
					labelFor="skillSelect"
				/>
				<Select
					forceSelection="false"
					id="skillSelect"
					items="{
                  path: 'newTeamFeedbackModel>/SkillCollection'
               }"
				>
					<core:ListItem
						key="{newTeamFeedbackModel>Id}"
						text="{newTeamFeedbackModel>Name}"
					/>
				</Select>
			</f:SimpleForm>
		</l:VerticalLayout>
		<footer>
			<Bar>
				<contentRight>
					<Button
						text="Request Feedback"
						press="onSendRequest"
						class="myCustomButton"
						icon="sap-icon://paper-plane"
					/>
				</contentRight>
			</Bar>
		</footer>
	</Page>
</mvc:View>