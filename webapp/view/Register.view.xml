<mvc:View
	controllerName="sap.ui.demo.walkthrough.controller.Register"
	xmlns="sap.m"
	xmlns:mvc="sap.ui.core.mvc"
>
	<Page>
		<customHeader>
           <Bar>
				<contentLeft>
					<Button
						icon="sap-icon://nav-back"
						press=".navBack"
						class="sapUiSmallMarginEnd"/>
					<Image src="../resources/MHP_Logo_RGB.svg" height="75%"/>
				</contentLeft>
           </Bar>
      	</customHeader>

		<Panel>
			<content>
				<Input
					id="UsernameRegisterField"
					placeholder="{i18n>Username}"
					valueLiveUpdate="true"
					width="80%"
				/>
				<Input
					id="PasswordRegisterField"
					type="Password"
					placeholder="{i18n>Password}"
					valueLiveUpdate="true"
					width="80%"
				/>
				<Input
					id="EmailRegisterField"
					placeholder="{i18n>companyEmail}"
					valueLiveUpdate="true"
					width="80%"
				/>
				<Button
					text="{i18n>submitRegisterBtn}"
					class="myCustomButton"
					width="80%"
					type="Emphasized"
					press=".onCreateRegister"
				/>
			</content>
		</Panel>
	</Page>
</mvc:View>