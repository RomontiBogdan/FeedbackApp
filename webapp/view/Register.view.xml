<mvc:View
	controllerName="sap.ui.demo.walkthrough.controller.Register"
	xmlns:core="sap.ui.core"
	xmlns:mvc="sap.ui.core.mvc"
	xmlns:f="sap.ui.layout.form"
	xmlns="sap.m"
>
	<Page>
		<customHeader>
           <Bar>
				<contentLeft>
					<Button
						icon="sap-icon://nav-back"
						press=".navBack"
						class="sapUiSmallMarginEnd"/>
					<Image src="../resources/MHP_Logo_RGB.svg" height="75%"/>
				</contentLeft>
           </Bar>
      	</customHeader>

		<FlexBox
                height="650px"
                alignItems="Center"
                justifyContent="Center">

		 <VBox fitContainer="true">
            <layoutData>
                <FlexItemData growFactor="7" />
            </layoutData>
		
		<f:SimpleForm
				id="form"
				editable="true"
				layout="ResponsiveGridLayout"
				labelSpanXL="3"
				labelSpanL="3"
				labelSpanM="3"
				adjustLabelSpan="false"
				emptySpanXL="3"
				emptySpanL="3"
				emptySpanM="3"
				columnsXL="1"
				columnsL="1"
				singleContainerFullSize="false"
			>
			<f:content>
				<Label
						text="{i18n>userText}"
						labelFor="UsernameRegisterField"
						required = "true"
					/>
				<Input
					id="UsernameRegisterField"
					placeholder="{i18n>enterUsername}"
					valueLiveUpdate="true"
					width="80%"
					value="{ path: '/username',type: '.customUserType'}"
				/>
				<Label
						text="{i18n>passText}"
						labelFor="UsernameRegisterField"
						required = "true"
					/>
				<Input
					id="PasswordRegisterField"
					type="Password"
					placeholder="{i18n>enterPassword}"
					valueLiveUpdate="true"
					width="80%"
					value="{ path: '/password',type: '.customPasswordType'}"
				/>
				<Label
						text="{i18n>emailText}"
						labelFor="UsernameRegisterField"
						required = "true"
					/>
				<Input
					id="EmailRegisterField"
					placeholder="{i18n>enterMail}"
					valueLiveUpdate="true"
					width="80%"
					value="{ path: '/email',type: '.customEMailType'}"
				/>
					</f:content>
			</f:SimpleForm>

		<FlexBox
        alignItems="Center"
        justifyContent="Center">
      <items>
				<Button
					text="{i18n>submitRegisterBtn}"
					class="myCustomButton"
					width="500px"
					type="Emphasized"
					press=".onCreateRegister"
				/>
			  </items>
    </FlexBox>
			</VBox>
	       </FlexBox>
	</Page>
</mvc:View>