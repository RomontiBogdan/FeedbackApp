<mvc:View
	controllerName="sap.ui.demo.walkthrough.controller.Register"
	xmlns="sap.m"
	xmlns:mvc="sap.ui.core.mvc"
>
	<Page
		showNavButton="true"
		navButtonPress=".onNavBack"
	>
		<headerContent>
			<Button 
			icon="https://image.flaticon.com/icons/png/512/197/197374.png"
			press=".setGermani18n"
			class="sapUiSmallMarginBeginEnd"/>
			<Button
			icon="https://image.flaticon.com/icons/png/512/197/197571.png"
			press=".setEnglishi18n"
			class="sapUiTinyMarginEnd"/>
		</headerContent>

		<Panel>
			<content>
				<Input
					id="UsernameRegisterField"
					placeholder="{i18n>Username}"
					valueLiveUpdate="true"
					width="80%"
				/>
				<Input
					id="PasswordRegisterField"
					type="Password"
					placeholder="{i18n>Password}"
					valueLiveUpdate="true"
					width="80%"
				/>
				<Input
					id="EmailRegisterField"
					placeholder="{i18n>companyEmail}"
					valueLiveUpdate="true"
					width="80%"
				/>
				<Button
					text="{i18n>submitRegisterBtn}"
					class="myCustomButton"
					width="80%"
					type="Emphasized"
					press=".onCreateRegister"
				/>
			</content>
		</Panel>
	</Page>
</mvc:View>