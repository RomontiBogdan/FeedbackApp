<mvc:View
	controllerName="sap.ui.demo.walkthrough.controller.ForgotPass"
	xmlns="sap.m"
	xmlns:mvc="sap.ui.core.mvc"
>
	<Page
		title="{i18n>ForgotPassword}"
		showNavButton="true"
		navButtonPress=".onNavBack"
	>
		<Panel class="sapUiResponsiveMargin">
			<content>
				<Input
					id="usernameTextFP"
					placeholder="Enter your username"
					valueLiveUpdate="true"
					width="80%"
				/>
				<Input
					id="emailTextFP"
					placeholder="Enter your email"
					valueLiveUpdate="true"
					width="80%"
				/>
				<Input
					id="passwordTextFP"
					placeholder="Enter your new password"
					valueLiveUpdate="true"
					width="80%"
					type="Password"
				/>
				<Button
					text="{i18n>ChangePassword}"
					class="myCustomButton"
					width="80%"
					type="Emphasized"
					press="onPressForgotPass"
				/>
			</content>
		</Panel>
	</Page>
</mvc:View>