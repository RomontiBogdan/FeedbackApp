<mvc:View
	controllerName="sap.ui.demo.walkthrough.controller.ForgotPass"
	xmlns="sap.m"
	xmlns:mvc="sap.ui.core.mvc"
>
	<Page>
		<customHeader>
           <Bar>
				<contentLeft>
					<Button
						icon="sap-icon://nav-back"
						press=".navBack"
						class="sapUiSmallMarginEnd"/>
					<Image src="../resources/MHP_Logo_RGB.svg" height="75%"/>
				</contentLeft>
           </Bar>
      	</customHeader>
		
		<Panel class="sapUiResponsiveMargin">
			<content>
				<Input
					id="usernameTextFP"
					placeholder="{i18n>enterUsername}"
					valueLiveUpdate="true"
					width="80%"
				/>
				<Input
					id="emailTextFP"
					placeholder="{i18n>enterMail}"
					valueLiveUpdate="true"
					width="80%"
				/>
				<Input
					id="passwordTextFP"
					placeholder="{i18n>enterNewPassword}"
					valueLiveUpdate="true"
					width="80%"
					type="Password"
				/>
				<Button
					text="{i18n>changePasswordBtn}"
					class="myCustomButton"
					width="80%"
					type="Emphasized"
					press="onPressForgotPass"
				/>
			</content>
		</Panel>
	</Page>
</mvc:View>