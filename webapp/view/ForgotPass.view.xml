<mvc:View
	controllerName="sap.ui.demo.walkthrough.controller.ForgotPass"
	xmlns="sap.m"
	xmlns:l="sap.ui.layout"
	xmlns:f="sap.ui.layout.form"
	xmlns:mvc="sap.ui.core.mvc">
	<Page
		title="ForgotPass"
		showNavButton="true"
		navButtonPress=".onNavBack" >
		
	 <Panel>
        <content>
             <Input
                 placeholder="Enter your email"
                 valueLiveUpdate="true"
                 width="80%"/>
 
            <Button
           		 text="{i18n>SubmitEmail}"
           		 class="myCustomButton"
            	 width="80%"
            />
        </content>
    </Panel>

	</Page>


</mvc:View>