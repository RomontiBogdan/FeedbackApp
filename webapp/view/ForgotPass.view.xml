<mvc:View
	controllerName="sap.ui.demo.walkthrough.controller.ForgotPass"
	xmlns="sap.m"
	xmlns:mvc="sap.ui.core.mvc"
>
	<Page
		showNavButton="true"
		navButtonPress=".onNavBack"
	>
		<headerContent>
			<Button 
			icon="https://image.flaticon.com/icons/png/512/197/197374.png"
			press=".setGermani18n"
			class="sapUiSmallMarginBeginEnd"/>
			<Button
			icon="https://image.flaticon.com/icons/png/512/197/197571.png"
			press=".setEnglishi18n"
			class="sapUiTinyMarginEnd"/>
		</headerContent>
		
		<Panel class="sapUiResponsiveMargin">
			<content>
				<Input
					id="usernameTextFP"
					placeholder="{i18n>enterUsername}"
					valueLiveUpdate="true"
					width="80%"
				/>
				<Input
					id="emailTextFP"
					placeholder="{i18n>enterMail}"
					valueLiveUpdate="true"
					width="80%"
				/>
				<Input
					id="passwordTextFP"
					placeholder="{i18n>enterNewPassword}"
					valueLiveUpdate="true"
					width="80%"
					type="Password"
				/>
				<Button
					text="{i18n>changePasswordBtn}"
					class="myCustomButton"
					width="80%"
					type="Emphasized"
					press="onPressForgotPass"
				/>
			</content>
		</Panel>
	</Page>
</mvc:View>