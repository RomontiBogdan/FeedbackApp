<mvc:View
	controllerName="sap.ui.demo.walkthrough.controller.RequestPEG"
	xmlns:core="sap.ui.core"
	xmlns:mvc="sap.ui.core.mvc"
	xmlns="sap.m"
>
	<Page
		class="sapUiContentPadding"
		enableScrolling="false"
	>
		<customHeader>
           <Bar>
				<contentLeft>
					<Button
						icon="sap-icon://nav-back"
						press=".navBack"
						class="sapUiSmallMarginEnd"/>
					<Image src="../resources/MHP_Logo_RGB.svg" height="75%" press=".toMain"/>
				</contentLeft>
           </Bar>
      	</customHeader>
		<content>
			<VBox width="100%">
				<VBox id="mainInfoContainer">
					<Label
						text="{i18n>nameText}"
						labelFor="inputText"
					/>
					<Input
						value="{FullName}"
						id="inputText"
						editable="false"
						class="sapUiSmallMarginBottom"
					/>
					<Label
						text="{i18n>emailText}"
						labelFor="inputEmail"
					/>
					<Input
						value="{Email}"
						id="inputEmail"
						editable="false"
						class="sapUiSmallMarginBottom"
					/>
					<Label
						text="{i18n>suText}"
						labelFor="inputSU"
					/>
					<Input
						value="{Su}"
						id="inputSU"
						editable="false"
						class="sapUiSmallMarginBottom"
					/>
					<Label
						text="{i18n>fiscalYearText}"
						labelFor="inputFiscalYear"
					/>
					<Input
						value="{FiscalYear}"
						id="inputFiscalYear"
						editable="false"
						class="sapUiSmallMarginBottom"
					/>
					<Label
						text="{i18n>projectSelect}"
						labelFor="selectProjectName"
						required="true"
					/>
					<Select
						forceSelection="false"
						id="selectProjectName"
						change="onProjectChange"
						items="{toProjects}"
					>
						<core:ListItem
							key="{ProjectId}"
							text="{ProjectName}"
						/>
					</Select>
				</VBox>
				<VBox id="selectManagerInfoContainer">
					<Label
						text="{i18n>managerSelect}"
						labelFor="selectManager"
						required="true"
					/>
					<Select
						forceSelection="false"
						id="selectManager"
						items="{toManagers}"
					>
						<core:ListItem
							key="{Username}"
							text="{Username}"
						/>
					</Select>
				</VBox>
			</VBox>
		</content>
		<footer>
			<Bar>
				<contentRight>
					<Button
						text="{i18n>sendRequestBtn}"
						press="onSendRequest"
						class="myCustomButton"
						icon="sap-icon://paper-plane"
					/>
				</contentRight>
			</Bar>
		</footer>
	</Page>
</mvc:View>