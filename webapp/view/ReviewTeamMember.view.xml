<mvc:View
	controllerName="sap.ui.demo.walkthrough.controller.ReviewTeamMember"
	xmlns="sap.m"
	xmlns:mvc="sap.ui.core.mvc"
>
	<Page>
		<customHeader>
           <Bar>
				<contentLeft>
					<Button
						icon="sap-icon://nav-back"
						press=".navBack"
						class="sapUiSmallMarginEnd"/>
					<Image src="../resources/MHP_Logo_RGB.svg" height="75%" press=".toMain"/>
				</contentLeft>
           </Bar>
      	</customHeader>	
		<Panel height="230px">
			<content>
				<VBox
					id="teamFeedbackVBox"
					alignItems="Center"
					width="100%"
				>
					<HBox>
						<VBox
							width="100%"
						>
							<GenericTile
								class="sapUiTinyMarginBegin sapUiTinyMarginTop tileLayout"
								header = "{i18n>managerTileTitle}"
								subheader="{Manager}"
								frameType="TwoByHalf"
								headerImage="sap-icon://manager"
							/>
							<GenericTile
								class="sapUiTinyMarginBegin sapUiTinyMarginTop tileLayout"
								header = "{i18n>employeeReviewTileTitle}"
								subheader="{ToUser}"
								frameType="TwoByHalf"
								headerImage="sap-icon://employee"
							/>
						</VBox>
						<VBox
							alignItems="Center"
							width="100%"
						>
							<GenericTile
								class="sapUiSmallMarginBottom sapUiTinyMarginBegin sapUiTinyMarginTop tileLayout"
								header = "{i18n>projectTileTitle}"
								subheader="{= ${ProjectId} !== '0000' ? ${ProjectId} : 'Project not specified'}"
								frameType="TwoByHalf"
								headerImage="sap-icon://group"
							/>
							<Label text="{i18n>giveGrade}"/>
							<RatingIndicator
								id="RatingTeamMember"
								maxValue="4"
								iconSize="32px"
								tooltip="Rating Tooltip"
							/>
						</VBox>
						<VBox>
						<GenericTile
							class="sapUiTinyMarginBegin sapUiTinyMarginTop tileLayout"
							header="{i18n>sendDateTileTitle}"
							subheader="{= ${SentAt} !== null ? ${SentAt}.toLocaleString() : ''}"
							frameType="TwoByHalf"
							headerImage="sap-icon://date-time"
						/>
						<GenericTile
							class="sapUiTinyMarginBegin sapUiTinyMarginTop tileLayout"
							header="{i18n>categoryTileTitle}"
							subheader="{
                        path: 'Categories',
                        formatter: '.formatter.feedbackCategory'
                     }"
							frameType="TwoByHalf"
							headerImage="sap-icon://multi-select"
						/>

						
						
						</VBox>
						
					</HBox>
				</VBox>
			</content>
		</Panel>
		<TextArea
			id="ReviewTextArea"
			value="{Description}"
			class="sapUiMediumMarginBeginEnd sapUiSmallMarginTop"
			placeholder="{i18n>descriptionTextArea}"
			growing="true"
			growingMaxLines="7"
			width="95%"
			height="60%"
		/>
		<footer>
			<Bar>
				<contentRight>
					<CheckBox
						id="completedCheckBox"
						text="{i18n>isCompleted}?"
						selected="{= ${Status} === '2' ? true : false}"
						select="onToggleStatus"
					/>
					<Button
						text="{i18n>sendFeedbackBtn}"
						press=".onSendFeedback"
						icon="sap-icon://paper-plane"
					/>
				</contentRight>
			</Bar>
		</footer>
	</Page>
</mvc:View>