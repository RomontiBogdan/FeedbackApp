<mvc:View
	controllerName="sap.ui.demo.walkthrough.controller.ReviewTeamMember"
	xmlns="sap.m"
	xmlns:mvc="sap.ui.core.mvc"
>
	<Page
		title="{i18n>teamFeedbackDetailPage}"
		showNavButton="true"
		navButtonPress=".onNavBack"
	>
		<Panel height="230px">
			<content>
				<VBox
					id="teamFeedbackVBox"
					alignItems="Center"
					width="100%"
				>
					<HBox>
						<VBox width="100%">
							<GenericTile
								class="sapUiTinyMarginBegin sapUiTinyMarginTop tileLayout"
								header="{i18n>ManagerTileTitle}"
								subheader="{Manager}"
								frameType="TwoByHalf"
								headerImage="sap-icon://manager"
							/>
							<GenericTile
								class="sapUiTinyMarginBegin sapUiTinyMarginTop tileLayout"
								header="{i18n>EmployeeReviewTileTitle}"
								subheader="{ToUser}"
								frameType="TwoByHalf"
								headerImage="sap-icon://employee"
							/>
						</VBox>
						<VBox
							alignItems="Center"
							width="100%"
						>
							<GenericTile
								class="sapUiSmallMarginBottom sapUiTinyMarginBegin sapUiTinyMarginTop tileLayout"
								header="{i18n>ProjectTileTitle}"
								subheader="{= ${ProjectId} !== '0000' ? ${ProjectId} : 'Project not specified'}"
								frameType="TwoByHalf"
								headerImage="sap-icon://group"
							/>
							<Label text="Give a grade"/>
							<RatingIndicator
								id="RatingTeamMember"
								iconSize="32px"
								value="{Rating}"
								tooltip="{i18n>RatingTooltip}"
							/>
						</VBox>
						<VBox>
							<GenericTile
								class="sapUiTinyMarginBegin sapUiTinyMarginTop tileLayout"
								header="{i18n>SendDateTileTitle}"
								subheader="{= ${SentAt} !== null ? ${SentAt}.toLocaleString() : ''}"
								frameType="TwoByHalf"
								headerImage="sap-icon://date-time"
							/>
							<GenericTile
								class="sapUiTinyMarginBegin sapUiTinyMarginTop tileLayout"
								header="{i18n>CategoryTileTitle}"
								subheader="{
                           path: 'Categories',
                           formatter: '.formatter.feedbackCategory'
                        }"
								frameType="TwoByHalf"
								headerImage="sap-icon://multi-select"
							/>
						</VBox>
					</HBox>
				</VBox>
			</content>
		</Panel>
		<TextArea
			id="ReviewTextArea"
			value="{Description}"
			class="sapUiMediumMarginBeginEnd sapUiSmallMarginTop"
			placeholder="Enter feedback description"
			growing="true"
			growingMaxLines="7"
			width="95%"
			height="60%"
		/>
		<footer>
			<Bar>
				<contentRight>
					<CheckBox
						id="completedCheckBox"
						text="is Completed?"
						selected="{= ${Status} === '2' ? true : false}"
						select="onToggleStatus"
					/>
					<Button
						text="{i18n>sendFeedbackBtn}"
						press="onSendFeedback"
						icon="sap-icon://paper-plane"
					/>
				</contentRight>
			</Bar>
		</footer>
	</Page>
</mvc:View>