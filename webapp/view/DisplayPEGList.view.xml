<mvc:View
	controllerName="sap.ui.demo.walkthrough.controller.DisplayPEGList"
	xmlns="sap.m"
	xmlns:mvc="sap.ui.core.mvc">


	<Page
		    title="List of User PEGs"
		    showNavButton="true"
		    navButtonPress=".onNavBack"
	>

							<footer>
 							  <Bar>
   								 <contentRight>
      								<Button
           					 			text="New Request"
            				 			press=".onNewRequest"
            				 			class="myCustomButton"
									/>
    							</contentRight>
  							  </Bar>
						    </footer>

		  	<Table id="pegTable"
				inset="false"
				items = "{displayList>/}" >
				<headerToolbar>
					<Toolbar>
						<ToolbarSpacer/>
						<Title text="Filter by Project:"/>
						<SearchField width="30%" search=".onFilterProject"/>
					</Toolbar>
				</headerToolbar>
		
				<columns>

						<Column width="12em">
							<Text text="Project " />
						</Column>

						<Column width="12em">
							<Text text="Manager" />
						</Column>

						<Column width="12em">
							<Text text="Status" />
						</Column>

				</columns>

				 <items>
            <ColumnListItem 
			type = "Navigation"
			press = ".onPress"
			>
                <cells>
                    <Text
                        
                        text="{displayList>Project}"
						/>
                    <Text
                        text="{displayList>Manager}" />
                    <Text
                        text="{
							path: 'displayList>Status',
							formatter: '.formatter.FeedbackStatus'
						}" />
                </cells>
            </ColumnListItem>
        </items>
			</Table>
    </Page>

</mvc:View>