<mvc:View
	controllerName="sap.ui.demo.walkthrough.controller.NewFeedback"
	xmlns:core="sap.ui.core"
	xmlns:mvc="sap.ui.core.mvc"
	xmlns:l="sap.ui.layout"
	xmlns:f="sap.ui.layout.form"
	xmlns="sap.m"
>
	<Page
		title="{i18n>newFeedbackPage}"
		showNavButton="true"
		navButtonPress=".onNavBack"
	>
	<headerContent>
		<Button 
		icon="https://image.flaticon.com/icons/png/512/197/197374.png"
		press=".setGermani18n"
		class="sapUiSmallMarginBeginEnd"/>
		<Button
		icon="https://image.flaticon.com/icons/png/512/197/197571.png"
		press=".setEnglishi18n"
		class="sapUiTinyMarginEnd"/>
	</headerContent>	
		<l:VerticalLayout
			class="sapUiContentPadding"
			width="100%"
		>
			<f:SimpleForm
				id="form"
				editable="true"
				layout="ResponsiveGridLayout"
				labelSpanXL="3"
				labelSpanL="3"
				labelSpanM="3"
				adjustLabelSpan="false"
				emptySpanXL="3"
				emptySpanL="3"
				emptySpanM="3"
				columnsXL="1"
				columnsL="1"
				singleContainerFullSize="false"
			>
				<Label
					text="{i18n>selectUserInput}"
					labelFor="inputToUser"
				/>
				<Select
					forceSelection="false"
					id="inputToUser"
					items="{/UsernamesSet}"
					change="onUserChange"
				>
					<core:ListItem
						key="{Username}"
						text="{Username}"
					/>
				</Select>
				<Label
					text="{i18n>selectProjectsInput} "
					labelFor="inputToProject"
				/>
				<Select
					forceSelection="false"
					id="inputToProject"
					items="{toProjects}"
				>
					<core:ListItem
						key="{ProjectId}"
						text="{ProjectName}"
					/>
				</Select>
				<!-- Annonymous? -->
				<CheckBox
					id="AnonymousCB"
					text="{i18n>anonymousCheckBox}"
				/>
				<Label
					text="{i18n>categoryFeedback}"
					labelFor="inputSkill"
				/>
				<Select
					forceSelection="false"
					id="inputSkill"
					selectedKey="{SelectedSkill}"
					items="{
                  path: 'newFeedbackModel>/SkillCollection'
               }"
				>
					<core:ListItem
						key="{newFeedbackModel>Id}"
						text="{newFeedbackModel>Name}"
					/>
				</Select>
				<RatingIndicator
					id="inputRating"
					class="sapUiSmallMarginBottom"
					value="1"
					tooltip="{i18n>RatingTooltip}"
				/>
			</f:SimpleForm>
			<Label
				text="{i18n>description}"
				labelFor="inputDescription"
			/>
			<TextArea
				placeholder="{i18n>descriptionTextArea}"
				id="inputDescription"
				growing="true"
				growingMaxLines="7"
				height="100px"
				width="90%"
			/>
		</l:VerticalLayout>
		<footer>
			<Bar>
				<contentRight>
					<Button
						text="{i18n>send}"
						press=".onSend"
						class="myCustomButton"
						icon="sap-icon://paper-plane"
					/>
				</contentRight>
			</Bar>
		</footer>
	</Page>
</mvc:View>