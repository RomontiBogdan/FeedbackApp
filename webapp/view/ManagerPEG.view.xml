<mvc:View
		controllerName="sap.ui.demo.walkthrough.controller.ManagerPEG"
		xmlns:core="sap.ui.core"
	    xmlns:mvc="sap.ui.core.mvc"
        xmlns="sap.m"
        xmlns:l="sap.ui.layout">
    <Page
		    title="Manager PEG"
		    showNavButton="true"
		    navButtonPress=".onNavBack"
	>

	<IconTabBar
			id="FeedbackTabBar"
			select=".onFilterSelect"
			class="sapUiResponsiveContentPadding">
			<items>
				<IconTabFilter
					icon="sap-icon://multiselect-all"
					iconColor="Information"
					text="All PEGs"
					key="allpegs" />
				<IconTabFilter
					icon="sap-icon://pending"
					iconColor="Critical"
					text="Pending"
					key="Pending" />
				<IconTabFilter
					icon="sap-icon://accept"
					iconColor="Positive"
					text="Completed"
					key="Completed" />
			</items>
			<content>
				<Table id="pegTable"
			inset="false"
			items = "{employee>/}" >
			<!-- <headerToolbar>
				<Toolbar>
					<ToolbarSpacer/>
					<Title text="Only Pending:"/>
					<Switch 
						id="PendingSwitch" 
						state="false" 
						customTextOn="  " 
						customTextOff=" " 
						change=".onPendingFilter">
                        <layoutData>
                            <FlexItemData growFactor="1" />
                        </layoutData>
                    </Switch>
					<SearchField
						id="sfInput"
						width="30%" 
						search=".onFilterEmployee" 
						placeholder="Filter by Name"/>
				</Toolbar>
			</headerToolbar> -->
				<columns>

						<Column width="12em">
							<Text text="Employees " />
						</Column>

						<Column width="12em">
							<Text text="Project" />
						</Column>

						<Column
							width="12em">
							<Text text="Status" />
						</Column>
				</columns>

				 <items>
            <ColumnListItem
			type = "Navigation"
			press = ".onPress"

			>
                <cells>
                    <ObjectIdentifier
                        
                        text="{employee>Employee}"
						/>
                    <Text
                        text="{employee>Project}" />

					<Text
							text="{
							path: 'employee>Status',
							formatter: '.formatter.pegStatus'
							}"
							
						/>
    
                </cells>
            </ColumnListItem>
        </items>
			</Table>
		</content>
	</IconTabBar>

	</Page>

</mvc:View>