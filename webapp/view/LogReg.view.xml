<mvc:View
	controllerName="sap.ui.demo.walkthrough.controller.LogReg"
	xmlns="sap.m"
	xmlns:mvc="sap.ui.core.mvc"
>
	<FlexBox
		height="600px"
		alignItems="Center"
		justifyContent="Center"
	>
		<Panel>
			<content>
				<Input
					id="UsernameField"
					placeholder="{i18n>Username}"
					valueLiveUpdate="true"
					submit="onLogIn"
					width="80%"
				/>
				<Input
					id="PasswordField"
					type="Password"
					placeholder="{i18n>Password}"
					valueLiveUpdate="true"
					submit="onLogIn"
					width="80%"
				/>
			</content>
			<content>
				<Button
					text="{i18n>loginBtn}"
					press=".onLogIn"
					class="myCustomButton"
					icon="sap-icon://visits"
					width="80%"
				/>
				<Button
					text="{i18n>registerBtn}"
					press=".onRegister"
					class="myCustomButton"
					width="80%"
				/>
				<Button
					text="{i18n>forgotPassBtn}"
					press=".onForgotPass"
					class="myCustomButton"
					width="80%"
					type="Transparent"
				/>
			</content>
		</Panel>
	</FlexBox>
</mvc:View>