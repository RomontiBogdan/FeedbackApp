<mvc:View
	controllerName="sap.ui.demo.walkthrough.controller.FeedbackList"
	xmlns:mvc="sap.ui.core.mvc"
	xmlns:core="sap.ui.core"
	xmlns="sap.m">
	<Page
		title="Feedback"
        showNavButton="true"
		navButtonPress=".onNavBack">
		<footer>
 			<Bar>
   				<contentRight>
      				<Button
           				text="New Feedback"
            			press=".onNewFeedback"
            			class="myCustomButton"
					/>
    			</contentRight>
  			</Bar>
		</footer>
		
		<Table id="feedbackTable"
			inset="false"
			items="{received>/}"
			>
			<headerToolbar>
				<Toolbar>
					<ToolbarSpacer/>
					<Title text="Only Pending:"/>
					<Switch 
						id="PendingSwitch" 
						state="false" 
						customTextOn="  " 
						customTextOff=" " 
						change=".onPendingFilter">
                        <layoutData>
                            <FlexItemData growFactor="1" />
                        </layoutData>
                    </Switch>
					<SearchField
						id="sfInput"
						width="30%" 
						search=".onFilterName" 
						placeholder="Filter by Name"/>
				</Toolbar>
			</headerToolbar>
			
			<columns>
				<Column
					width="12em">
					<Text text="User Name" />
				</Column>
				<Column
					width="12em">
					<Text text="Project" />
				</Column>
				<Column
					width="12em">
					<Text text="Feedback Type" />
				</Column>
				<Column
					width="12em">
					<Text text="Status" />
				</Column>
			</columns>
			<items>
				<ColumnListItem
					type="Navigation"
					press = ".onFeedbackPress">
					<cells>
						<ObjectIdentifier
							title="{received>Name}"
							text="{received>Name}"/>
						<Text
							text="{received>Project}" />
						<Text
							text="{received>FeedbackType}" />
						<Text
							text="{
							path: 'received>Status',
							formatter: '.formatter.FeedbackStatus'
						}"
							
						/>
						<!-- state="{= ${received>Status} === true ? 'Error' : 'Success' }" -->
					</cells>
				</ColumnListItem>
			</items>
		</Table>
		  
    </Page>
</mvc:View>