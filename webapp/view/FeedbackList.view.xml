<mvc:View
	controllerName="sap.ui.demo.walkthrough.controller.FeedbackList"
	xmlns:mvc="sap.ui.core.mvc"
	xmlns="sap.m"
>
	<Page
		title="Feedback"
		showNavButton="true"
		navButtonPress=".onNavBack"
	>
		<footer>
			<Bar>
				<contentRight>
					<Button
						text="New Feedback"
						press=".onNewFeedback"
						class="myCustomButton"
					/>
				</contentRight>
			</Bar>
		</footer>

			<IconTabBar
			id="FeedbackTabBar"
			select=".onFilterSelect"
			class="sapUiResponsiveContentPadding"
		>
			<items>
				<IconTabFilter
					icon="sap-icon://multiselect-all"
					iconColor="Information"
					text="All Feedbacks"
					key="allfeedbacks" />
				<IconTabFilter
					icon="sap-icon://back-to-top"
					iconColor="Critical"
					text="Sent"
					key="Sent"
				/>
				<IconTabFilter
					icon="sap-icon://download"
					iconColor="Positive"
					text="Received"
					key="Received"
				/>
			</items>
			<content>
				<Table
					id="feedbackTable"
					items="{
						path : '/Feedback360Set'
					 }"
				>
				<!-- <headerToolbar>
					<Toolbar>
						<ToolbarSpacer/>
						<Title text="Only Pending:"/>
						<Switch 
							id="PendingSwitch" 
							state="false" 
							customTextOn="  " 
							customTextOff=" " 
							change=".onPendingFilter">
							<layoutData>
								<FlexItemData growFactor="1" />
							</layoutData>
						</Switch>
						<SearchField
							id="sfInput"
							width="25%" 
							search=".onFilterName" 
							placeholder="Filter by Name"/>
					</Toolbar>
				</headerToolbar> -->
				
				<columns>
					<Column
						width="12em">
						<Text text="From User" />
					</Column>
					<Column
						width="12em">
						<Text text="To User" />
					</Column>
					<Column
						width="12em">
						<Text text="Project" />
					</Column>
					<Column
						width="12em">
						<Text text="Category" />
					</Column>
					<Column
						width="8em">
						<Text text="Anonymous" />
					</Column>
				</columns>
				<items>
					<ColumnListItem
						type="Navigation"
						press = ".onFeedbackPress">
						<cells>
							<Text
								text="{
										parts:[
											{path:'FromUser'},
											{path:'Anonymous'}
											], 
										formatter:'.formatter.feedbackAnonymous'
									   }" />
							<Text
								text="{ToUser}" />
							<Text
								text="{ProjectId}" />
							<Text
								text="{
								path: 'Categories',
								formatter: '.formatter.feedbackCategory'
								}"
							/>
							<Text
								text="{
								path: 'Anonymous',
								formatter: '.formatter.FeedbackStatus'
								}"
								
							/>
						</Toolbar>
					</headerToolbar>
					<columns>
						<Column width="12em">
							<Text text="From User"/>
						</Column>
						<Column width="12em">
							<Text text="To User"/>
						</Column>
						<Column width="12em">
							<Text text="Project"/>
						</Column>
						<Column width="12em">
							<Text text="Category"/>
						</Column>
						<Column width="12em">
							<Text text="Anonymous"/>
						</Column>
					</columns>
					<items>
						<ColumnListItem
							type="Navigation"
							press=".onFeedbackPress"
						>
							<cells>
								<Text text="{FromUser}"/>
								<Text text="{ToUser}"/>
								<Text text="{ProjectId}"/>
								<Text text="{Categories}"/>
								<Text text="{
									path: 'Anonymous',
									formatter: '.formatter.FeedbackStatus'
								}"/>
							</cells>
						</ColumnListItem>
					</items>
				</Table>
			</content>
		</IconTabBar>
	</Page>
</mvc:View>