<mvc:View
	controllerName="sap.ui.demo.walkthrough.controller.FeedbackList"
	xmlns:mvc="sap.ui.core.mvc"
	xmlns:core="sap.ui.core"
	xmlns="sap.m">
	<Page
		title="{i18n>DisplayPEGList}"
        showNavButton="true"
		navButtonPress=".onNavBack">

		<footer>
 			<Bar>
   				<contentRight>
      				<Button
           				text="New Feedback"
            			press=".onNewFeedback"
            			class="myCustomButton"
					/>
    			</contentRight>
  			</Bar>
		</footer>
		
		<Table id="feedbackTable"
			inset="false"
			items="{test>/}"
			>
			<headerToolbar>
				<Toolbar>
					<ToolbarSpacer/>
					<Title text="Filter by Name:"/>
					<SearchField width="30%" search=".onFilterName"/>
				</Toolbar>
			</headerToolbar>
			
			<columns>
				<Column
					width="12em">
					<Text text="User Name" />
				</Column>
				<Column
					width="12em">
					<Text text="Project" />
				</Column>
				<Column
					width="12em">
					<Text text="Feedback Type" />
				</Column>
				<Column
					width="12em">
					<Text text="Status" />
				</Column>
			</columns>
			<items>
				<ColumnListItem
					type="Navigation"
					press = ".onFeedbackPress">
					<cells>
						<ObjectIdentifier
							title="{test>Name}"
							text="{test>Name}"/>
						<Text
							text="{test>Project}" />
						<Text
							text="{test>FeedbackType}" />
						<Text
							text="{
							path: 'test>Status',
							formatter: '.formatter.FeedbackStatus'
						}"
						/>
						<!-- state="{= ${test>Status} === true ? 'Error' : 'Success' }" -->
					</cells>
				</ColumnListItem>
			</items>
		</Table>
		  
    </Page>
</mvc:View>