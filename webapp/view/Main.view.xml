<mvc:View
	controllerName="sap.ui.demo.walkthrough.controller.Main"
	xmlns="sap.m"
	xmlns:mvc="sap.ui.core.mvc"
>
	<Page title="{i18n>mainPageTitle}">
		<headerContent>
			<Button 
			text="{i18n>profileBtn}"
			icon="sap-icon://account"
			press=".onProfile"/>
			<Button 
			icon="https://image.flaticon.com/icons/png/512/197/197374.png"
			press=".setGermani18n"
			class="sapUiSmallMarginBeginEnd"/>
			<Button
			icon="https://image.flaticon.com/icons/png/512/197/197571.png"
			press=".setEnglishi18n"
			class="sapUiTinyMarginEnd"/>
			<Button 
			tooltip="{i18n>logOut}"
			type="Emphasized"
			icon="sap-icon://visits"
			press=".onLogOut"/>
		</headerContent>
		<FlexBox
				fitContainer="true"
				alignItems="Center"
				justifyContent="Center">
				<GenericTile
					class="sapUiTinyMarginBegin sapUiTinyMarginTop tileLayout"
					header="{i18n>PEG}"
					mode="HeaderMode"
					frameType="TwoByOne"
					press=".onPEG"
				/>
				<GenericTile
					class="sapUiTinyMarginBegin sapUiTinyMarginTop tileLayout"
					header="{i18n>feedback360}"
					mode="HeaderMode"
					frameType="TwoByOne"
					press=".onFeedback"
				/>
				<GenericTile
					class="sapUiTinyMarginBegin sapUiTinyMarginTop tileLayout"
					header="{i18n>teamFeedback}"
					mode="HeaderMode"
					frameType="TwoByOne"
					press=".onTeamFeedback"
				/>
		</FlexBox>
		
	</Page>
</mvc:View>