<mvc:View
	controllerName="sap.ui.demo.walkthrough.controller.FeedbackDetails"
	xmlns="sap.m"
	xmlns:mvc="sap.ui.core.mvc"
	xmlns:l="sap.ui.layout">
	<Page
		    title="Info about Feedback"
		    showNavButton="true"
		    navButtonPress=".onNavBack">
		<GenericTile class="sapUiTinyMarginBegin sapUiTinyMarginTop tileLayout" 
			header="FROM"
			subheader="{	
						parts:[
						{path:'FromUser'},
						{path:'Anonymous'}
						], 
						formatter:'.formatter.feedbackAnonymous'
					}" 
			frameType="OneByOne">
			<TileContent>
				<ImageContent src="sap-icon://drill-up" />
			</TileContent>
		</GenericTile>
		<GenericTile class="sapUiTinyMarginBegin sapUiTinyMarginTop tileLayout" 
			header="TO"
			subheader="{ToUser}" 
			frameType="OneByOne">
			<TileContent>
				<ImageContent src="sap-icon://drill-down" />
			</TileContent>
		</GenericTile>
		<GenericTile class="sapUiTinyMarginBegin sapUiTinyMarginTop tileLayout" 
			header="Project ID"
			subheader="{ProjectId}" 
			frameType="OneByOne">
			<TileContent>
				<ImageContent src="sap-icon://group" />
			</TileContent>
		</GenericTile>
		<GenericTile class="sapUiTinyMarginBegin sapUiTinyMarginTop tileLayout" 
			header="Review"
			subheader="{
					path: 'Rating',
					formatter: '.formatter.feedbackRating'
					}" 
			frameType="OneByOne">
			<TileContent>
				<NumericContent value="{Rating}" withMargin="false" icon="sap-icon://favorite"/>
			</TileContent>
		</GenericTile>
		<GenericTile class="sapUiTinyMarginBegin sapUiTinyMarginTop tileLayout" 
			header="Category"
			subheader="{
						path: 'Categories',
						formatter: '.formatter.feedbackCategory'
						}" 
			frameType="OneByOne">
			<TileContent>
				<ImageContent src="sap-icon://activities" />
			</TileContent>
		</GenericTile>
		<GenericTile class="sapUiTinyMarginBegin sapUiTinyMarginTop tileLayout" 
			header="Sent At"
			subheader="{SentAt}" 
			frameType="OneByOne">
			<TileContent>
				<ImageContent src="sap-icon://date-time" />
			</TileContent>
		</GenericTile>
		
		<TextArea value="{Description}" editable="false" growing="true" growingMaxLines="7" width="100%" height="50%"/>
	
    </Page>

</mvc:View>