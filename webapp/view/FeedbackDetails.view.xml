<mvc:View
	controllerName="sap.ui.demo.walkthrough.controller.FeedbackDetails"
	xmlns="sap.m"
	xmlns:mvc="sap.ui.core.mvc"
>
	<Page
		title="Info about Feedback"
		showNavButton="true"
		navButtonPress=".onNavBack"
	>
		<Panel>
			<content>
				<VBox
					alignItems="Center"
					width="100%"
				>
					<HBox>
						<GenericTile
							class="sapUiTinyMarginBegin sapUiTinyMarginTop tileLayout"
							header="FROM"
							subheader="{= ${Anonymous} &amp;&amp; ${FromUser} !== ${AnonymousModel>/currentUser} 
                        ? 'Anonymous sender' : ${FromUser}}"
							frameType="Auto"
						>
							<TileContent>
								<ImageContent src="sap-icon://drill-up"/>
							</TileContent>
						</GenericTile>
						<GenericTile
							class="sapUiTinyMarginBegin sapUiTinyMarginTop tileLayout"
							header="TO"
							subheader="{ToUser}"
							frameType="Auto"
						>
							<TileContent>
								<ImageContent src="sap-icon://drill-down"/>
							</TileContent>
						</GenericTile>
						<GenericTile
							class="sapUiTinyMarginBegin sapUiTinyMarginTop tileLayout"
							header="Project ID"
							subheader="{ProjectId}"
							frameType="Auto"
						>
							<TileContent>
								<ImageContent src="sap-icon://group"/>
							</TileContent>
						</GenericTile>
						<GenericTile
							class="sapUiTinyMarginBegin sapUiTinyMarginTop tileLayout"
							header="Review"
							subheader="{
                        path: 'Rating',
                        formatter: '.formatter.feedbackRating'
                     }"
							frameType="Auto"
						>
							<TileContent>
								<NumericContent
									value="{Rating}"
									withMargin="false"
									icon="sap-icon://favorite"
								/>
							</TileContent>
						</GenericTile>
						<GenericTile
							class="sapUiTinyMarginBegin sapUiTinyMarginTop tileLayout"
							header="Category"
							subheader="{
                        path: 'Categories',
                        formatter: '.formatter.feedbackCategory'
                     }"
							frameType="Auto"
						>
							<TileContent>
								<ImageContent src="sap-icon://activities"/>
							</TileContent>
						</GenericTile>
						<GenericTile
							class="sapUiTinyMarginBegin sapUiTinyMarginTop tileLayout"
							header="Sent At"
							subheader="{= ${SentAt} !== null ? ${SentAt}.toLocaleString() : ''}"
							frameType="Auto"
						>
							<TileContent>
								<ImageContent src="sap-icon://date-time"/>
							</TileContent>
						</GenericTile>
					</HBox>
				</VBox>
			</content>
		</Panel>
		<Label
			class="sapUiSmallMarginTopBottom sapUiMediumMarginBeginEnd"
			text="Comments"
			labelFor="descriptionTextArea"
		/>
		<TextArea
			id="descriptionTextArea"
			value="{Description}"
			class="sapUiMediumMarginBeginEnd"
			editable="false"
			growing="true"
			growingMaxLines="7"
			width="94%"
			height="90%"
		/>
	</Page>
</mvc:View>